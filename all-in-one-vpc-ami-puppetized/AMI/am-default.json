{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "name": "BASE",
    "base_ami": "ami-8fab8fea",
    "region": "us-east-2",
    "buildtime": "{{ isotime \"2006-01-02-1504\" }}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "t2.medium",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `name`}}-WSO2AM-Default-{{isotime \"2006-01-02-1504\"}}",
    "ami_description": "WSO2 API Manager Default profile on Ubuntu 14.04",
    "tags": {
      "Name": "WSO2AM-Default-Base",
      "Product": "WSO2AM",
      "Version": "2.1.0",
      "Profile": "Default",
      "Build": "{{ user `buildtime` }}"
    },
    "ami_block_device_mappings": [{
      "device_name": "/dev/xvdf",
      "volume_size": 10,
      "delete_on_termination": true
    }],
    "launch_block_device_mappings": [{
      "device_name": "/dev/xvdf",
      "volume_size": 10,
      "delete_on_termination": true
    }]
  }],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get upgrade -y",
        "sleep 30"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "execute_command": "sudo su - -c '{{ .Vars }} {{ .Path }}'",
      "script": "scripts/config.sh"
    }
  ]
}
